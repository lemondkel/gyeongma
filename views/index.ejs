    <script src="/javascripts/respond.min.js"></script>
</head>
<body>

<div id="wrapper">
    <% include common/navigation.ejs %>
</div>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">2017년 대상경주 일정</h1>
        </div>
    </div>

    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-body">
                <ul class="nav nav-pills">
                    <li class="active col-lg-4 text-center"><a href="#seoul-pills" data-toggle="tab">서울</a>
                    </li>
                    <li class="col-lg-4 text-center"><a href="#jeju-pills" data-toggle="tab">제주</a>
                    </li>
                    <li class="col-lg-4 text-center"><a href="#busan-pills" data-toggle="tab">부산</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade in active" id="seoul-pills">
                        <div class="col-lg-12">
                            <div class="panel panel-default panel-wrap">
                                <div class="panel_body">
                                    <table width="100%"
                                           class="table table-striped table-bordered table-hover text-center"
                                           id="seoulYearSchedule">
                                        <thead>
                                        <tr>
                                            <th class="text-center">시행일자</th>
                                            <th class="text-center">경주명</th>
                                            <th class="text-center">경주격</th>
                                            <th class="text-center">거리</th>
                                        </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="jeju-pills">
                        <div class="col-lg-12">
                            <div class="panel panel-default panel-wrap">
                                <div class="panel_body">
                                    <table width="100%"
                                           class="table table-striped table-bordered table-hover text-center"
                                           id="jejuYearSchedule">
                                        <thead>
                                        <tr>
                                            <th class="text-center">시행일자</th>
                                            <th class="text-center">경주명</th>
                                            <th class="text-center">경주격</th>
                                            <th class="text-center">거리</th>
                                        </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="busan-pills">
                        <div class="col-lg-12">
                            <div class="panel panel-default panel-wrap">
                                <div class="panel_body">
                                    <table width="100%"
                                           class="table table-striped table-bordered table-hover text-center"
                                           id="busanYearSchedule">
                                        <thead>
                                        <tr>
                                            <th class="text-center">시행일자</th>
                                            <th class="text-center">경주명</th>
                                            <th class="text-center">경주격</th>
                                            <th class="text-center">거리</th>
                                        </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row"></div>
</div>
</body>
<script src="/javascripts/jquery-3.2.1.min.js"></script>
<script src="/javascripts/bootstrap.min.js"></script>
<script src="/javascripts/metisMenu.min.js"></script>
<script src="/javascripts/jquery.dataTables.min.js"></script>
<script src="/javascripts/dataTables.bootstrap.min.js"></script>
<script src="/javascripts/dataTables.responsive.js"></script>
<script src="/javascripts/sb-admin-2.js"></script>
<script src="/javascripts/index.js"></script>
<script>
    var dataDateArr = '<%= dataDateArr %>';
    var rcNameArr = '<%= rcNameArr %>';
    var rcGradeArr = '<%= rcGradeArr %>';
    var rcDistArr = '<%= rcDistArr %>';
    var meetArr = '<%= meetArr %>';

    dataDateArr = dataDateArr.split(',');
    rcNameArr = rcNameArr.split(',');
    rcGradeArr = rcGradeArr.split(',');
    rcDistArr = rcDistArr.split(',');
    meetArr = meetArr.split(',');

    for (var i = 0; i < dataDateArr.length; i++) {

        var html = "";
        var target;

        var pgDate = dataDateArr[i].toString().replace("-", "");

        html += '<tr class="odd gradeX">';
        html += '<td data-target=' + pgDate + '>' + dataDateArr[i] + '</td>';
        html += '<td>' + rcNameArr[i] + '</td>';
        html += '<td>' + rcGradeArr[i] + '</td>';
        html += '<td>' + rcDistArr[i] + '</td>';
        html += '</tr>';

        if (meetArr[i] === '1')
            target = $('#seoulYearSchedule');
        else if (meetArr[i] === '2')
            target = $('#jejuYearSchedule');
        else
            target = $('#busanYearSchedule');

        target.children('tbody').append(html);
    }
</script>
</html>